<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.paint.Color?>

<?import javafx.scene.control.ProgressBar?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="605.0" prefWidth="902.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.CostruzioneScenaAlan"
            stylesheets="@application.css">
    <children>
        <!-- Outer Background -->
        <AnchorPane layoutX="25.0" layoutY="25.0" prefHeight="565.0" prefWidth="858.0"
                    style="-fx-background-color: linear-gradient(to bottom, #E8F5E9, #C8E6C9); -fx-border-color: black; -fx-border-width: 2px;">
            <children>
                <!-- Inner Background -->
                <AnchorPane layoutX="54.0" layoutY="28.0" prefHeight="509.0" prefWidth="750.0"
                            style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #E8F5E9); -fx-border-color: black; -fx-border-width: 2px;">
                    <children>
                        <Text styleClass="text-title" layoutX="235.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Java Debug Quest"/>

                        <!-- ProgressBar -->
                        <ProgressBar fx:id="progressBar" layoutX="50.0" layoutY="55.0" prefWidth="650.0"
                                     progress="0.0" /> <!-- Initial progress set to 0.0 -->

                        <!-- Button to simulate progress -->
                        <Button fx:id="startButton" layoutX="50.0" layoutY="400.0" mnemonicParsing="false"
                                onAction="#startProgress" prefHeight="40.0" prefWidth="50.0"
                                styleClass="button-large" text="Start"/>

                        <!-- Facile Section -->
                        <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="85.0" prefWidth="650.0"
                                    style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black; -fx-border-width: 1px;">
                            <children>
                                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Facile"/>
                                <Button styleClass="button-large" layoutX="500.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#ScenaEsercizioFacile" text="Inizia"/>
                            </children>
                        </AnchorPane>

                        <!-- Intermedio Section -->
                        <AnchorPane layoutX="50.0" layoutY="200.0" prefHeight="85.0" prefWidth="650.0"
                                    style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black; -fx-border-width: 1px;">
                            <children>
                                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Intermedio"/>
                                <Button styleClass="button-large" layoutX="500.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#ScenaEsercizioIntermedio" text="Inizia"/>
                            </children>
                        </AnchorPane>

                        <!-- Difficile Section -->
                        <AnchorPane layoutX="50.0" layoutY="300.0" prefHeight="85.0" prefWidth="650.0"
                                    style="-fx-background-color: linear-gradient(to bottom, #A5D6A7, #81C784); -fx-border-color: black; -fx-border-width: 1px;">
                            <children>
                                <Text styleClass="text-section" layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Difficile"/>
                                <Button styleClass="button-large" layoutX="500.0" layoutY="20.0" mnemonicParsing="false"
                                        onAction="#ScenaEsercizioDificile" text="Inizia"/>
                            </children>
                        </AnchorPane>

                        <!-- Indietro Button -->
                        <Button styleClass="button-back" layoutX="50.0" layoutY="460.0" mnemonicParsing="false" onAction="#ScenaDashbord"
                                text="Indietro"/>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
